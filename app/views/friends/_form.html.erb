<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.text_field :first_name, placeholder: :first_name, class: "form-control" %>
  </div>

  <br>

  <div class="field form-group">
    <%= form.text_field :last_name, placeholder: :last_name, class: "form-control" %>
  </div>

  <br>

  <div class="field form-group">
    <%= form.text_field :email, placeholder: :email, class: "form-control" %>
  </div>

  <br>

  <div class="field form-group">
    <%= form.text_field :phone, placeholder: :phone, class: "form-control" %>
  </div>

  <br>

  <div class="field form-group">
    <%= form.text_field :twitter, placeholder: :twitter, class: "form-control" %>
  </div>

  <br>

  <div class="field form-group">
    <%= form.number_field :user_id, id: :friend_user_id, value: current_user.id, class: "form-control", type: :hidden %>
  </div>

  <br>

  <div class="field form-group">
    <%= form.submit class: "btn btn-primary"%> |
    <%= link_to "Back to friends", friends_path, class: "btn btn-secondary" %>
  </div>
<% end %>
