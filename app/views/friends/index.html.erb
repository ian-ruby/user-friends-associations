<p style="color: green"><%= notice %></p>

<h1>Friends List</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <% @friends.each do |friend| %>
     <tr>
      <th> <%= friend.first_name %> </th>
      <th> <%= friend.last_name %> </th>
      <th> <%= friend.email %> </th>
      <th> <%= friend.phone %> </th>
      <th> <%= friend.twitter %> </th>
      <th> <%= link_to "Show Friend", friend %> </th>
     </tr>
     <% end %>
  </tbody>

</table>

<%= link_to "New friend", new_friend_path %>
