
<h1>Friends List</h1>

<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User Id</th>
      <th colspan=""></th>
    </tr>
  </thead>

  <tbody>
     <% @friends.each do |friend| %>
     <tr>
      <td>
        <%= link_to friend.first_name + ' ' + friend.last_name, friend %>         
      </td>
      <td> <%= friend.email %> </td>
      <td> <%= friend.phone %> </td>
      <td> <%= friend.twitter %> </td>
      <td> <%= friend.user.id %> </td>
      <td> <%= button_to "Delete Friend", friend, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %> </td>
     </tr>
     <% end %>
  </tbody>

</table>

<%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>
